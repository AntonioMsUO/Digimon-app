<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Muestra el nombre del Digimon en grande. -->
        <TextView
            android:id="@+id/digimon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_gradient"/>

        <!--Muestra la imagen del Digimon. -->

        <!--Muestra el nivel del Digimon. -->
        <ImageView
            android:id="@+id/digimon_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/background_gradient"/>

        <!-- Título para el atributo del Digimon.-->
        <TextView
            android:id="@+id/title_digimon_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nivel"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_gradient"/>

        <TextView
            android:id="@+id/digimon_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            />


        <!-- Título para el atributo del Digimon.-->
        <TextView
            android:id="@+id/title_digimon_attribute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atributo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_gradient"/>
        <!--Muestra el atributo del Digimon. -->
        <TextView
            android:id="@+id/digimon_attribute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            />

        <!-- Título para los campos -->
        <TextView
            android:id="@+id/digimon_fields_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Campos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_gradient"
            />

        <!-- Contenedor para los campos -->
        <LinearLayout
            android:id="@+id/digimon_fields_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp" />

        <!-- Título para el tipo del Digimon.-->
        <TextView
            android:id="@+id/title_digimon_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_gradient"/>
        <!--Muestra el tipo del Digimon. -->
        <TextView
            android:id="@+id/digimon_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black" />

        <!--Muestra título de la descirpición. -->
        <TextView
            android:id="@+id/digimon_description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_gradient"/>

        <!--Muestra la descripción del Digimon. -->
        <TextView
            android:id="@+id/digimon_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"/>

        <!--Muestra título de las habilidades. -->
        <TextView
            android:id="@+id/digimon_skills_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habilidades"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_gradient"/>

        <!-- Contenedor para las descripciones -->
        <LinearLayout
            android:id="@+id/digimon_skills_description_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp" />

        <!--Título para las evoluciones. -->
        <TextView
            android:id="@+id/digimon_evolution_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evoluciones Previas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_gradient"/>

        <!--Muestra qué items pueden evolucionar en este Digimon. -->
        <LinearLayout
            android:id="@+id/digimon_prior_evolutions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />

        <!--Título para las evoluciones. -->
        <TextView
            android:id="@+id/digimon_next_evolution_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evoluciones"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_gradient"/>

        <!--Muestra las evoluciones del Digimon. -->
        <LinearLayout
            android:id="@+id/digimon_next_evolutions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />


    </LinearLayout>
</ScrollView>
