<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo base: azul grisáceo suave -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#9FB6C7" /> <!-- Azul-gris medio, combina con fondo azul claro -->
        </shape>
    </item>

    <!-- Capa con degradado sutil para dar profundidad -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#B6CCD8"
            android:endColor="#7B95A8"
            android:type="linear" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#5C6F80" /> <!-- Borde oscuro para definición -->
        </shape>
    </item>

</layer-list>
